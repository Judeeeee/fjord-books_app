<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Article:</strong>
  <%= @report.article %>
</p>

<% @report_comments.each do |report_comment| %>
  <p>コメント:<%=report_comment.chat%></br></p>
  <p>投稿日時:<%=report_comment.created_at%></br></p>
  <p>投稿者:<%=report_comment.posted_user_name%></br></p>
<%end%>

<%= render 'comments/form', commentable: @report, comment: @comments %>

<% if @report.report_posted_user_id == current_user.id%>
  <%= link_to 'Edit', edit_report_path(@report) %>
  <%= link_to 'Delete', @report, method: :delete %>
<%end%>
<%= link_to 'Back', reports_path %>
