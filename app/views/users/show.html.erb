<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<p>
  <strong><%= User.human_attribute_name(:email) %>:</strong>
  <%= @user.email %>
</p>

<p>
  <strong><%= User.human_attribute_name(:encrypted_password) %>:</strong>
  <%= @user.encrypted_password %>
</p>

<p>
  <strong><%= User.human_attribute_name(:name) %>:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= User.human_attribute_name(:zip_code) %>:</strong>
  <%= @user.zip_code %>
</p>

<p>
  <strong><%= User.human_attribute_name(:self_introduction) %>:</strong>
  <%= @user.self_introduction %>
</p>

<p>
  <strong><%= User.human_attribute_name(:address) %>:</strong>
  <%= @user.address %>
</p>

<% if current_user.id == params[:id].to_i%>
  <%= link_to "自分のプロフィールを編集する", edit_user_path(@user) %>
<% else %>
  <p>自分のプロフィールではないので、編集はできない</p>
<% end %>
