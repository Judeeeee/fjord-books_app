<h1>ユーザー詳細ページ</h1>

<p>
  <strong><%= User.human_attribute_name(:name) %>:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= User.human_attribute_name(:zip_code) %>:</strong>
  <%= @user.zip_code %>
</p>

<p>
  <strong><%= User.human_attribute_name(:self_introduction) %>:</strong>
  <%= @user.self_introduction %>
</p>

<p>
  <strong><%= User.human_attribute_name(:address) %>:</strong>
  <%= @user.address %>
</p>

<% if @current_user == @user_id %>
  <%= link_to t('devise.shared.links.my_page_edit'), edit_user_registration_path(@user) %>
<% end %>
<%= link_to t('devise.shared.links.sign_out'), destroy_user_session_path, method: :delete %>
