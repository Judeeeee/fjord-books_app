<h2>アカウントの新規登録</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: 6) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name%><br />
    <%= f.text_field :name, autofocus: true  %>
  </div>

  <div class="field">
    <%= f.label :zip_code%><br />
    <%= f.text_field :zip_code, autofocus: true  %>
  </div>

  <div class="field">
    <%= f.label :self_introduction%><br />
    <%= f.text_field :self_introduction, autofocus: true  %>
  </div>

  <div class="field">
    <%= f.label :address%><br />
    <%= f.text_field :address, autofocus: true  %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.new.sign_up') %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
<%= link_to t('devise.shared.links.sign_out'), destroy_user_session_path, method: :delete %>
